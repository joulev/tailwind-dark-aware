{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020", // node 14
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "$types": ["./src/types"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
