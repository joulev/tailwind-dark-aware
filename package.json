{
  "name": "tailwind-dark-aware",
  "version": "unreleased",
  "description": "Tailwind CSS plugin to generate shorthands for light mode and dark mode classes.",
  "author": "Vu Van Dung",
  "license": "MIT",
  "repository": "https://github.com/joulev/tailwind-dark-aware",
  "keywords": [
    "tailwindcss",
    "dark mode"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "prettier": {
    "singleQuote": false,
    "trailingComma": "all",
    "printWidth": 100
  },
  "scripts": {
    "main:build": "tsc -p tsconfig.build.json",
    "main:watch": "tsc -w",
    "demo:dev": "next dev ./demo",
    "demo:build": "next build ./demo",
    "demo:start": "next start ./demo",
    "build": "pnpm main:build && pnpm demo:build",
    "dev": "concurrently \"pnpm main:watch\" \"pnpm demo:dev\"",
    "test": "jest",
    "test:ci": "jest --ci --coverage"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0 || insiders"
  },
  "devDependencies": {
    "@types/color": "3.0.3",
    "@types/jest": "29.1.2",
    "@types/node": "18.8.4",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "autoprefixer": "10.4.12",
    "concurrently": "7.4.0",
    "eslint": "8.25.0",
    "eslint-config-next": "12.3.1",
    "jest": "29.2.0",
    "next": "12.3.1",
    "postcss": "8.4.17",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "latest",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "color": "4.2.3"
  }
}
